                                            "aph\u02bfel",
                                            "ettaph\u02bfal",
                                            "saph\u02bfel",
                                            "ethp\u02bfel",
                                            "p",
                                            "ethp",
                                            "ethpalpal",
                                            "pay\u02bfel",
                                            "ethpay\u02bfal",
                                            "ethpar\u02bfal",
                                            "eshtaph\u02bfal",
                                            "ethpaw\u02bfal",
                                            "paw\u02bfel",
                                            "palpal",
                                            "pam\u02bfel",
                                            "taph\u02bfel",
                                            "par\u02bfel",
                                            "estaph\u02bfal",
                                            "ethpa\u02bfli",
                                            "pa\u02bfli"
                                        ],
                                        "type": "string"
                                    },
                                    "lexeme": {
                                        "$ref": "#/paths/~1word~1%7Bid%7D/get/responses/200/schema/items/properties/word"
                                    },
                                    "number": {
                                        "description": "The number of a Syriac adjective, noun, suffix, or verb.",
                                        "enum": [
                                            "plural",
                                            "singular"
                                        ],
                                        "type": "string"
                                    },
                                    "person": {
